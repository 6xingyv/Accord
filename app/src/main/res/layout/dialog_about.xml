<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingTop="30dp"
    android:paddingRight="22dp"
    android:paddingBottom="30dp">

    <ImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_gramophone_monochrome"
        app:tint="@color/contrast_colorOnSurface" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/contrast_colorOnSurface"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/contrast_colorOnSurfaceFainted"
            android:textSize="16sp"
            tools:text="Version 1.0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/opensource_info"
            android:textColor="@color/contrast_colorOnSurface"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>